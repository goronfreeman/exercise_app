<h1>Add session</h1>

  <%= form_for(@exercise_session) do |f| %>

    <% if @exercise_session.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@exercise_session.errors.count, "error") %>
          prohibited this exercise from being saved:
        </h2>
        <ul>
          <% @exercise_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :set_goal %><br>
      <%= f.number_field :set_goal, class: 'form_control' %>
    </div>

    <div>
      <%= f.label :rep_goal %><br>
      <%= f.number_field :rep_goal, class: 'form_control' %>
    </div>

    <div>
      <%= f.label :duration_goal %><br>
      <%= f.number_field :duration_goal, class: 'form_control' %>
    </div>

    <div>
      <%= f.label :weight %><br>
      <%= f.number_field :weight, class: 'form_control' %>
    </div>

    <div>
      <%= f.submit "Add session", class: "btn btn-primary" %>
    </div>
  <% end %>
