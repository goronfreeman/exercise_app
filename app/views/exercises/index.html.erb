<h1>All exercises</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @exercises.each do |exercise| %>
    <tr>
      <td><%= exercise.name %></td>
      <td><%= link_to "show ", exercise_path(exercise) %>
        <%= link_to "edit ", edit_exercise_path(exercise) %>
        <%= link_to "delete ", exercise_path(exercise), method: :delete, data: { confirm: 'Are you sure?'} %>
        <%= link_to "start", new_exercise_session_path %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Create exercise", new_exercise_path, class: "btn btn-primary" %>
